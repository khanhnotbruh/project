USES CRT;
VAR X,A,C,BEST:ARRAY[1..100] OF INTEGER;
    N, MAX, SUM,VAL,B,J:INTEGER;
    F:TEXT;
PROCEDURE INIT;  VAR I:INTEGER;BEGIN
 ASSIGN(F,'CAITUI.INP');RESET(F);READLN(F,N,B);
 FOR I:=1 TO N DO READ(F,A[I]);READLN(F);
 FOR I:=1 TO N DO READ(F,C[I]);CLOSE(F);
 ASSIGN(F,'CAITUI.OUT');REWRITE(F);
 END;
PROCEDURE KQ;
BEGIN
 IF VAL>MAX THEN BEGIN
   MAX:=VAL;
   BEST:=X;
         END;
 END;
PROCEDURE TRY(I:INTEGER); VAR J:INTEGER;BEGIN
 FOR J:=0 TO 1 DO
    IF SUM+J*A[I]<=B THEN BEGIN
        X[I]:=J;SUM:=SUM+X[I]*A[I];VAL:=X[I]*C[I]+VAL;
        IF I=N THEN KQ
        ELSE TRY(I+1);
        SUM:=SUM-X[I]*A[I];VAL:=VAL-X[I]*C[I];
        END;
        END;
BEGIN
MAX:=0;VAL:=0;SUM:=0;
INIT;TRY(1);WRITE(F,MAX);WRITELN(F);
FOR J:=1 TO N DO IF BEST[J]=1 THEN WRITE(F,J,' ');CLOSE(F);END.